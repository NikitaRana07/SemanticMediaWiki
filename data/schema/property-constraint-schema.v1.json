{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.semantic-mediawiki.org/wiki/Help:Schema/Type/PROPERTY_CONSTRAINT_SCHEMA",
  "type": "object",
  "title": "Property constraint validation schema",
  "required": [
    "type",
    "constraints"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "enum": [
        "PROPERTY_CONSTRAINT_SCHEMA"
      ],
      "title": "Schema type",
      "default": "PROPERTY_CONSTRAINT_SCHEMA"
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "title": "tags",
      "default": null,
      "items": {
        "$id": "#/properties/tags/items",
        "type": "string",
        "title": "tags, keywords etc.",
        "default": "",
        "pattern": "^(.*)$"
      }
    },
    "constraints": {
      "$id": "#constraints",
      "type": "object",
      "title": "constraint rules",
      "minProperties": 1,
      "propertyNames": {
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
      },
      "additionalProperties": {
        "$ref": "#/definitions/constraints"
      }
    }
  },
  "definitions": {
    "allows_namespaces": {
      "$id": "#allows_namespaces",
      "type": "array",
      "title": "allowed namespaces",
      "minItems": 1,
      "items": {
        "type": "string",
        "title": "namespace",
        "default": "",
        "pattern": "^(NS_|SMW_NS_)(.*)$"
      }
    },
    "annotation_constraints": {
      "type": "object",
      "$id": "#annotation_constraints",
      "title": "value instance",
      "properties": {
        "allows_namespaces": {
          "$ref": "#allows_namespaces"
        }
      },
      "additionalProperties": true
    },
    "property_constraints": {
      "type": "object",
      "$id": "#property_constraints",
      "title": "property instance"
    },
    "constraints": {
      "type": "object",
      "$id": "#constraints",
      "title": "constraints",
      "properties": {
        "property_constraints": {
          "$ref": "#/definitions/property_constraints"
        },
        "annotation_constraints": {
          "$ref": "#/definitions/annotation_constraints"
        }
      }
    }
  }
}